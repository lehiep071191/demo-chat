<%= form_for (@post) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, placeholder: "title" %>
	<%= f.label :body %>
	<%= f.text_area :body, class: "form-control", placeholder: "body of post" %>
	<%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
	<%= f.submit 'create', class: "btn btn-success" %>
<% end %>
